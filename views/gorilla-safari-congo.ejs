        <!-- Other Safaris -->
        <div class="other-safaris">

            <h1 class="slider-title heading">Congo Gorilla Safari Packages</h1>

            <div class="best-safari-content">

                <% if (congoGorillaSafaris.length > 0) { %>

                    <% congoGorillaSafaris.forEach(function(gorillaSafari) { %>
                
                    <div class="safari">
                        <div class="slider-image">
                            <img src="data:<%= gorillaSafari.image.contentType %>;base64,<%= gorillaSafari.image.data.toString('base64') %>" alt="<%= gorillaSafari.title %> Photo">
                        </div>
                        <div class="safari-info">
                            <h4><a href="/content-gs/<%= gorillaSafari._id %>"><%= gorillaSafari.title %></a></h4>
                            <p><%- gorillaSafari.preview %></p>
                            <div class="details">
                                <div class="calendar">
                                    <i class="fa-regular fa-calendar-days"></i>
                                    <p><%= gorillaSafari.days %></p>
                                </div>
                                <p><%= gorillaSafari.price %></p>
                            </div>
                            <div class="btn">
                                <a href="/content-gs/<%= gorillaSafari._id %>">See Details</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    <% } %>
      
                  <% if (nextPage !== null) { %>
                      <div class="btn">
                          <a href="gorilla-safari-congo/?page=<%= nextPage %>">See More</a>
                      </div>
                  <% } %>

                    
            
            </div>
        </div>

        <div class="enquire-section">
            <h1>Doesn't the above package meet your needs?</h1>
            <p>Let us help you plan your special package with our Travel Experts.</p>
            <div class="buttons">
                <div class="btn-for expert">
                    <a href="#">Our Travel Experts</a>
                </div>
                <div class="btn-for tour">
                    <a href="#">Customize Your Tour</a>
                </div>
