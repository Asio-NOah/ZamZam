<div class="page-container">
    <div class="banner">
        <div class="slider">
            <img src="data:<%= activity.headerImage.contentType %>;base64,<%= activity.headerImage.data.toString('base64') %>" alt="<%= activity.title %> Photo" id="slideImg-ug">
        </div>
        <div class="overlay content-heading">
            <h1><%= activity.title %></h1>
        </div>
    </div>
    <div class="content-content">
        <div class="main-content">

            <div class="image">
                <img src="data:<%= activity.image.contentType %>;base64,<%= activity.image.data.toString('base64') %>" alt="<%= activity.title %> Photo" id="slideImg-ug">
            </div>
            
            <div class="intro">
                <h2 class="heading">Overview.</h2>
                <p><%- activity.overview %></p>
            </div>

            <div class="content">
                <div class="nav">
                    <ul class="menu-link">
                        <li class="active" data-service="itinerary">Itinerary</li>
                        <li data-service="price-details">Price Details</li>
                        <li data-service="accommodation">Accommodation</li>
                        <li data-service="when">When to visit</li>
                    </ul>
                </div>
                <div class="content-pages">
                    <div class="content-section" data-service="itinerary">
                        <p><%- activity.itinerary %></p>
                    </div>
                    <div class="content-section" data-service="price-details">
                        <p><%- activity.details %>
                        </p>
                    </div>
                    <div class="content-section" data-service="accommodation">
                        <p><%- activity.accommodation %></p>
                    </div>
                    <div class="content-section" data-service="when">
                        <p>
                            <%- activity.when %>
                        </p>
                    </div>
                </div>
            </div>

            <div class="price-disclaimer">
                <p><%- activity.disclaimer %></p>
            </div>
        </div>

        <div class="side-bar">

            <div class="booking-price pp">
                <p>Price Per Person</p><span><%= wildlifeSafari.price %></span>
            </div>
            <div class="booking-intro">
                <p>
                    Impeccable service, where your satisfaction is our priority. Trust in our expertise and embark on a journey of unparalleled comfort and perfect experience.
                </p>
            </div>

            <div class="book-btns">
                <button class="booking btn-for activity" onclick="showBooking()"><strong>Book Now</strong></button>
                <button class="booking btn-for enquire"><strong><a href="/enquiry">Enquire</a></strong></button>
                <button class="booking btn-for plan-t"><strong>Plan Trip</strong></button>
            </div>
            <div class="booking-data" id="bookingData">
                <div class="booking-price">
                    <p>Price Per Person</p><span><%= activity.price %></span>
                </div>

                <p class="just">Please fill up the form below to help us know exactly what you're looking for</p>

                <form action="" >
                  
                   
                    <p class="enquiry_p">
                       <label class="enquiry_label" for="yournames">Your Names</label> 
                       <input class="enquiry_input" type="text" name="yournames" id="yournames">
                    </p>
                    <p class="enquiry_p">
                       <label class="enquiry_label" for="your email">Your Email</label>
                       <input class="enquiry_input" type="text" name="your email" id="your email">
                    </p>
                   <p class="enquiry_p">
                       <label class="enquiry_label" for="your nationality">Your Nationality</label> 
                       <input class="enquiry_input" type="text" name="your nationality" id="yournationality">
                   </p>
                   <p class="enquiry_p">
                       <label class="enquiry_label" for="Travel Date">Travel Date</label>
                       <input class="enquiry_input" type="date" name="Travel Date" id="traveldate">
                   </p>
                   <p class="enquiry_p">
                       <label class="enquiry_label" for="Number of Days">Number of Days</label>
                       <input class="enquiry_input" type="text" name="No. of Days" id="numberofdays">
                   </p>
                   <p class="enquiry_p">
                       <label class="enquiry_label" for="Number of persons">Number of Persons</label>
                       <input class="enquiry_input" type="text" name="No. of persons" id="numberofpersons">
                   </p>
                   <p class="enquiry_p">
                       <label class="enquiry_label" for="Accomodation">Accomodation</label>
                       
                       <select name="" id="" class="enquiry_input">
                           <option value="">Luxury</option>
                           <option value="">Standard</option>
                           <option value="">Budget</option>
                       </select>
                       
                   </p>
                   <p class="enquiry_p">
                       <label class="enquiry_label" for="telephone">Telephone</label>
                       <input class="enquiry_input" type="tel" name="" id="" placeholder="+256 701041637" required>
                   </p>
                   <p class="enquiry_p">
                       <label class="enquiry_label" for="Interests">Interests (More options possible)</label><br>
                   </p>
                   <p class="enquiry_p_checkbox">
                       <label class="enquiry_label_checkbox">
                           <input class="enquiry_input_checkbox" type="checkbox" name="Interest" id="" value="Wildlife Viewing">
                           Wildlife Viewing
                       </label><br>
                       <label class="enquiry_label_checkbox">
                           <input class="enquiry_input_checkbox" type="checkbox" name="Interest" id="" value="Bird Watching">
                           Bird Watching
                       </label><br>
                       <label class="enquiry_label_checkbox">
                           <input class="enquiry_input_checkbox" type="checkbox" name="Interest" id="" value="Gorilla Trekking">
                           Gorilla Trekking
                       </label><br>
                       <label class="enquiry_label_checkbox">
                           <input class="enquiry_input_checkbox" type="checkbox" name="Interest" id="" value="Chimpanzee Tracking">
                           Chimpanzee Tracking
                       </label><br>
                       <label class="enquiry_label_checkbox">
                           <input class="enquiry_input_checkbox" type="checkbox" name="Interest" id="" value="Primate Tour">
                           Primate Tour
                       </label><br>
                       <label class="enquiry_label_checkbox">
                           <input class="enquiry_input_checkbox" type="checkbox" name="Interest" id="" value="Cultural Tour">
                           Cultural Tour
                       </label><br>
                       <label class="enquiry_label_checkbox">
                           <input class="enquiry_input_checkbox" type="checkbox" name="Interest" id="" value="Witwater Rating">
                           Witwater Rating
                       </label><br>
                       <label class="enquiry_label_checkbox">
                           <input class="enquiry_input_checkbox" type="checkbox" name="Interest" id="" value="Mountaineering">
                           Mountaineering
                       </label><br>
                       <label class="enquiry_label_checkbox">
                           <input class="enquiry_input_checkbox" type="checkbox" name="Interest" id="" value="Horseback Riding">
                           Horseback Riding
                       </label><br>
                       <label class="enquiry_label_checkbox">
                           <input class="enquiry_input_checkbox" type="checkbox" name="Interest" id="" value="Honeymoon Holiday">
                           Honeymoon Holiday
                       </label><br>
                   </p>
                   <p class="enquiry_p">
                       <label class="enquiry_label" for="Additional Information">Additional Information (optional)</label><br>
                       <textarea class="enquiry_textarea" name="Additional Information" id="additionalinformatio" cols="30" rows="10"></textarea>
                   </p>
                   <button class="enquiry_submit" type="submit">Submit</button>
               </fieldset>
       
           </form>
            </div>
        </div>
    </div>
    <div class="enquire-section">
        <h1>Doesn't the above package meet your needs?</h1>
        <p>Let us help you plan your special package with our Travel Experts.</p>
        <div class="buttons">
            <div class="btn-for expert">
                <a href="#">Our Travel Experts</a>
            </div>
            <div class="btn-for activity">
                <a href="#">Customize Your Activity</a>
            </div>
        </div>
    </div>
    <div class="more-content">
        <!-- Other sections -->
        <div class="bottom-content">
            <div class="other-safaris">
                <h1 class="slider-title heading">Other Related Activity Packages</h1>
                <div class="other-safaris-content">
                    <% activities.forEach(activity => { %>
                        <div class="safari">
                            <div class="slider-image">
                                <img src="data:<%= activity.image.contentType %>;base64,<%= activity.image.data.toString('base64') %>" alt="<%= activity.title %> Photo">
                            </div>
                            <div class="safari-info">
                                <h4><a href="/content-activities/<%= activity._id %>"><%= activity.title %></a></h4>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>
