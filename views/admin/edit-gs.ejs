<div class="admin_wrapper">

    <div class="left-sidebar">
        <ul>
            <li><a href="#gs">Manage Gorilla Safaris</a></li>
            <li><a href="#t">Manage Tours</a></li>
            <li><a href="#ws">Manage Wildlife Safaris</a></li>
            <li><a href="#a">Manage Activities</a></li>
        </ul>
    </div>
    
    <div class="admin-content">

        <h1 class="admin-heading">Gorilla Safari</h1>

        <div class="content">
            <h2 class="page-title">Edit Gorilla Safari</h2>

            <div>
                <form action="/delete-gs?_method=DELETE" method="post">
                    <button type="submit" class="btn admin-btn">Delete this Gorilla Safari</button>
                </form>
            </div>
            
            <form action="/edit-gs/<%= gorillaSafari._id %>" method="POST" enctype="multipart/form-data" class="add-post">
                <div class="input-box">
                    <label for="topic">Country</label>
                    <select name="topic" class="select-input">
                        <option value="Uganda" <%= gorillaSafari.country === 'Uganda' ? 'selected' : '' %>>Uganda</option>
                        <option value="Kenya" <%= gorillaSafari.country === 'Kenya' ? 'selected' : '' %>>Kenya</option>
                        <option value="Tanzania" <%= gorillaSafari.country === 'Tanzania' ? 'selected' : '' %>>Tanzania</option>
                        <option value="Rwanda" <%= gorillaSafari.country === 'Rwanda' ? 'selected' : '' %>>Rwanda</option>
                        <option value="Congo" <%= gorillaSafari.country === 'Congo' ? 'selected' : '' %>>Congo</option>
                    </select>
                </div>
            
                <div class="input-box">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" class="text-input" value="<%= gorillaSafari.title %>">
                </div>
            
                <div class="input-box">
                    <label for="overview">Tour Overview</label>
                    <textarea name="overview" id="mytextarea" cols="50" rows="10" class="text-input"><%= gorillaSafari.overview %></textarea>
                </div>
            
                <div class="input-box">
                    <label for="days">Number of days</label>
                    <input name="days" id="body" class="text-input" value="<%= gorillaSafari.days %>">
                </div>
                <div class="input-box">
                    <label for="price">Price</label>
                    <input name="price" id="mytextarea" class="text-input" value="<%= gorillaSafari.price %>">
                </div>
            
                <div class="input-box">
                    <label for="disclaimer">Price Disclaimer</label>
                    <textarea name="disclaimer" id="mytextarea" cols="50" rows="10" class="text-input"><%= gorillaSafari.disclaimer %></textarea>
                </div>

                <div class="input-box">
                    <label for="details">Details of cost</label>
                    <textarea name="details" id="mytextarea" cols="50" rows="10" class="text-input"><%= gorillaSafari.details %></textarea>
                </div>

                <div class="input-box">
                    <label for="when">When best to visit</label>
                    <textarea name="when" id="mytextarea" cols="50" rows="10" class="text-input"><%= gorillaSafari.when %></textarea>
                </div>
            
                <div class="input-box">
                    <label for="accomodation">Accomodation</label>
                    <textarea name="accomodation" id="mytextarea" cols="50" rows="10" class="text-input"><%= gorillaSafari.accommodation %></textarea>
                </div>
                
                <div class="input-box">
                    <label for="preview">Preview</label>
                    <textarea name="preview" id="mytextarea" cols="50" rows="10" class="text-input"><%= gorillaSafari.preview %></textarea>
                </div>
            
                <div class="input-box">
                    <label for="itineray">Itineray</label>
                    <textarea name="itineray" id="mytextarea" cols="50" rows="10" class="text-input"><%= gorillaSafari.itinerary %></textarea>
                </div>
            
                <div class="input-box">
                    <label for="header-image">Header Image</label>
                    <input type="file" name="header-image" id="img-input" >
                </div>
            
                <div class="input-box">
                    <label for="image">Image</label>
                    <input type="file" name="image" id="img-input" >
                </div>
              
                <div>
                    <input type="submit" class="btn admin-btn" value="Save Changes to Gorilla Safari">
                </div>
            </form>
            

        </div>
    </div>

</div>