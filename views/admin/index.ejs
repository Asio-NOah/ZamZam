<div class="admin_wrapper">
    <div class="left-sidebar">
        <ul>
            <li><a href="#gs">Manage Gorilla Safaris</a></li>
            <li><a href="#t">Manage Tours</a></li>
            <li><a href="#ws">Manage Wildlife Safaris</a></li>
            <li><a href="#a">Manage Activities</a></li>
        </ul>
    </div>

    <div class="admin-content">
        <h1 class="admin-heading">Welcome to Uganda!</h1>

        <section id="gs">
            <h2 class="section-heading">Gorilla Safaris</h2>
            <div class="button-group">
                <a href="/add-gs" class="admin-btn">Add New Gorilla Safari</a>
            </div>
            <table>
                <thead>
                    <th>SN</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th colspan="3">Action</th>
                </thead>
                <tbody>
                    <% ugandaGorillaSafaris.forEach(function(gorillaSafari, index) { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td>
                                <a href="/content-gs/<%= gorillaSafari._id %>"><%= gorillaSafari.title %></a>
                            </td>
                            <td>Asizy</td>
                            <!-- <td><a href="/edit-gs/<%= gorillaSafari._id %>" class="edit">Edit</a></td> -->
                            <td>
                                <form action="/delete-gs/<%= gorillaSafari._id %>?_method=DELETE" method="post">
                                    <input type="submit" value="Delete" class="delete">
                                </form>
                            </td>
                            <td><a href="#" class="publish">Publish</a></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <% if (ugandaGorillaSafaris.length === 0) { %>
                <p>No gorilla safaris found.</p>
            <% } %>
        </section>

